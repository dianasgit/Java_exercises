package Aula12;
import java.util.Scanner;
public class ScannerFunction {
	
public static void main(String[] args) {

	// To reed data you must use the Class Scanner  like:

 //	 Scanner nome = new Scanner (System.in);
// scanner class + nome escolhido por mim = new Scanner vai instanciar a classe para nós e o parametro será o system.in
	
//existe tb outras duas classes de ler info (e arquivo tb) do teclado, porém por enquanto scanner é a mais simples e será usada no curso
// para utilizar a classe Scanner precisa importar a biblio assim:
	
	// import java.util.Scanner;
	
/* There are two different way to reed data in the keyboard
 *  
 *   *** 1º Reed a whole line, do not mather if have diferent data type
 *    String nome = scan.nextLine();
 *    
 *   *** 2º Reed a specific data type from the keyboard, use:
 *   String primeiroNome = scan.next();
 *   int idade = scan.nextInt();
 *   double altura = scan.nextDouble();
 */
	
	Scanner scanearTeclado = new Scanner(System.in);
	
	/* System.out.println("Digite seu nome completo: ");
	String nomeCompleto = scanearTeclado.nextLine(); // reed all the line
	
	System.out.println("Seu nome completo é: " + nomeCompleto);
	
	System.out.println("Digite seu primeiro nome: ");
	String primeiroNome = scanearTeclado.next(); // apenas next pois só vou ler um nome string
	// com next() só vai ser o primeiro nome digitado... se escrever mais ele ignora
	System.out.println("Seu primeiro nome é: " + primeiroNome);
	*/
	
	System.out.println("Digite o seu primeiro nome, idade, quantidade de filhos, altura e se vc tem pets de estimação:");
	String primeiroNome = scanearTeclado.next();
	int idade = scanearTeclado.nextInt();
	byte qtdFilhos = scanearTeclado.nextByte();
	float altura = scanearTeclado.nextFloat();
	boolean temPet = scanearTeclado.nextBoolean();
	
	System.out.println("Você digitou os seguintes valores:");
	System.out.println("Primeiro nome: "+ primeiroNome);
	System.out.println("Sua idade é: " + idade);
	System.out.println("Você tem: " + qtdFilhos + " filhos.");
	System.out.println("Sua altura é: "+ altura);
	System.out.println("Vocẽ sem pet? " + temPet);

	//note: if u dont write exactly de type of data required a error occur  
	// and in the case of boolen you need to write true or false
	// and for decimal use dot .
	// and in the exemple above you can write everything in the same line just separed by space
	// and any dada write after the last requirement (aftar the boolean) will be ignores
	// The boolean will in this form of SOPLN will be printed in lowercase  mesmo que escreva em caps
	// o string vai sair igualzinho vc digitou
}
}
